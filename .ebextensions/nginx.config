# .ebextensions/nginx.config
files:
  "/etc/nginx/conf.d/01_django_proxy.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      server {
          listen 80;
          server_name coffee-shop-production.eba-5ht8eda8.us-east-2.elasticbeanstalk.com;

          location / {
              proxy_pass http://127.0.0.1:8000;  # Suponiendo que Gunicorn est√° corriendo en el puerto 8000
              proxy_set_header Host $host;
              proxy_set_header X-Real-IP $remote_addr;
              proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
          }
      }
